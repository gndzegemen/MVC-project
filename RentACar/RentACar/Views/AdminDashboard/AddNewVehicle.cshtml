@model RentACar_Model.Models.Vehicle

<h2>Add New Vehicle</h2>

<form asp-action="AddNewVehicle" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Vehicle Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicensePlate">License Plate</label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Add Vehicle</button>
    </div>

</form>
