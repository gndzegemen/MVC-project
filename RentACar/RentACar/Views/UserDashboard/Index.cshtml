@model IEnumerable<RentACar_Model.Models.Vehicle>

<div class="border p-4 bg-white">
    <div class="col-9">
        <h2 class="text-info">Vehicle List</h2>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table secondary">
                    <th>Araç Adı</th>
                    <th>Plakası</th>
                    <th>Aktif Çalışma Süresi (sa)</th>
                    <th>Bakım Süresi (sa)</th>
                    <th>Boşta Bekleme Süresi (sa)</th>
                    <th></th>
                </tr>
                @foreach (var vehicle in Model)
                {
                    <tr>
                        <td>@vehicle.Name</td>
                        <td>@vehicle.LicensePlate</td>
                        <td>@vehicle.ActiveWorkingTime</td>
                        <td>@vehicle.MaintenanceTime</td>
                        <td>@vehicle.IdleStandbyTime</td>

                        <td>
                            <a asp-action="AddVehicleInfo" asp-route-id="@vehicle.VehicleId" class="btn btn-primary">Add Info</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No vehicles found.</p>
        }
    </div>
</div>
